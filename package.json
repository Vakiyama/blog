{
  "name": "app",
  "version": "1.0.50",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "concurrently --kill-others \"bun run tailwind-watch\"  \"bun --hot src/index.ts\"",
    "create-database": "echo 'PRAGMA schema_version;' | sqlite3 database.db && echo 'database created'",
    "tailwind-watch": "bunx tailwindcss -i ./src/tailwind.css -o ./public/output.css --watch"
  },
  "dependencies": {
    "@elysiajs/html": "^0.8.0",
    "@elysiajs/static": "^0.8.1",
    "@libsql/client": "^0.5.3",
    "elysia": "latest",
    "fuzzy": "^0.1.3",
    "marked": "^12.0.1",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1"
  },
  "module": "src/index.js"
}
